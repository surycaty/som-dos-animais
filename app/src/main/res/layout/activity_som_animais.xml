<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background"
    tools:context="com.surycaty.somdosanimais.SomAnimaisActivity">

    <GridLayout
        android:id="@+id/gridAnimais"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alignmentMode="alignMargins"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageButton
            android:id="@+id/imgButton01"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cachorro"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="41dp" />

        <ImageButton
            android:id="@+id/imgButton03"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_column="2"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:layout_row="2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/porco"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="295dp" />

        <ImageButton
            android:id="@+id/imgButton04"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_column="0"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_row="2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sapo"
            tools:layout_editor_absoluteX="201dp"
            tools:layout_editor_absoluteY="295dp" />

        <ImageButton
            android:id="@+id/imgButton02"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_column="2"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/gato"
            tools:layout_editor_absoluteX="201dp"
            tools:layout_editor_absoluteY="41dp" />
    </GridLayout>

</RelativeLayout>