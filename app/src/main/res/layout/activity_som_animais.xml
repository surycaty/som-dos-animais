<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.surycaty.somdosanimais.SomAnimaisActivity">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="10dp">

        <ImageButton
            android:id="@+id/imgButton01"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cachorro"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="41dp" />

        <ImageButton
            android:id="@+id/imgButton03"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_column="2"
            android:layout_row="2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/porco"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="295dp" />

        <ImageButton
            android:id="@+id/imgButton04"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_column="0"
            android:layout_row="2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sapo"
            tools:layout_editor_absoluteX="201dp"
            tools:layout_editor_absoluteY="295dp" />

        <ImageButton
            android:id="@+id/imgButton02"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_column="2"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/gato"
            tools:layout_editor_absoluteX="201dp"
            tools:layout_editor_absoluteY="41dp" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
